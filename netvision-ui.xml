      </imagetype>

      <!-- The heading (name) of the screen -->
      <textarea name="heading" from="base_heading">
          <position>0,0</position>
          <textarea name="text">
              <value>Search Videos</value>
          </textarea>
      </textarea>

      <!-- The clock that is shown at the top right of each screen -->
      <textarea name="clock" from="base_clock">
          <position>1040,0</position>
      </textarea>

      <!-- this is the background around the sites -->
      <shape name="group_background" from="base_background_shape">
          <area>25,70,1230,347</area>
      </shape>


    <textarea name="searchlab" from="base_textarea">
        <area>45,90,350,40</area>
        <align>right,vcenter</align>
        <value>Search Term:</value>
    </textarea>
    <textedit name="search" from="base_textedit">
        <position>412,90</position>
    </textedit>

    <shape name="search_separator" from="base_separator_shape">
        <area>45,150,1190,1</area>
    </shape>

    <!-- the selection of available sites -->
    <buttonlist name="sites" from="base_buttonlist">
        <area>45,171,350,225</area>
        <spacing>4</spacing>
        <scrollstyle>top</scrollstyle>
        <wrapstyle>items</wrapstyle>
    </buttonlist>

    <!-- the selection of the available results -->
    <buttonlist name="results" from="base_buttonlist_very_wide">
        <area>412,171,825,225</area>
        <spacing>4</spacing>
        <wrapstyle>captive</wrapstyle>
        <statetype name="buttonitem">
            <state name="active">
                <textarea name="title" from="base_textarea">
                    <area>8,5,550,30</area>
                    <align>left,vcenter</align>
                    <cutdown>yes</cutdown>
                </textarea>
                <textarea name="length" from="base_textarea">
                    <area>560,5,110,30</area>
                    <align>right,vcenter</align>
                </textarea>
                <textarea name="date" from="base_textarea">
                    <area>680,5,140,30</area>
                    <align>allcenter</align>
                </textarea>
            </state>
            <!-- menu entry has been selected and is active -->
            <state name="selectedactive" from="active">
                <imagetype name="buttonbackground" from="base_image_selected">
                    <filename>images/widgets/buttonlist_active_very_wide.png</filename>
                    <!--<alphapulse min="160" max="255" change="2"/>-->
                </imagetype>
            </state>

            <!-- menu entry has been selected and is inactive -->
            <state name="selectedinactive" from="active">
                <imagetype name="buttonbackground" from="base_image_inactive">
                    <filename>images/widgets/buttonlist_active_very_wide.png</filename>
                </imagetype>
                <textarea name="buttontext">
                    <font>text_inactive</font>
                </textarea>
            </state>
        </statetype>
    </buttonlist>

    <!-- this is the background for the information at the bottom -->
    <shape name="bottom_background" from="base_background_shape">
        <area>25,441,1230,255</area>
    </shape>

    <!-- the shape around the preview -->
    <shape name="preview_shape" from="base_background_shape">
        <area>45,465,355,208</area>
    </shape>

    <!-- the preview image or video itself -->
    <imagetype name="preview">
        <area>48,468,349,202</area>
        <preserveaspect>yes</preserveaspect>
    </imagetype>

    <!-- the vertical separator -->
    <shape name="video_description_separator" from="base_separator_shape">
        <area>419,455,1,225</area>
    </shape>

    <!-- shows the title and the plot of the selected video -->
    <textarea name="title" from="base_textarea">
        <area>435,458,770,30</area>
        <multiline>no</multiline>
        <align>left,vcenter</align>
        <cutdown>yes</cutdown>
        <font>title</font>
    </textarea>

    <!-- show the channel and the recorded time of the video -->
    <textarea name="filesize_str" from="base_textarea">
        <area>435,505,210,20</area>
        <font>text_small</font>
        <cutdown>yes</cutdown>
        <template>Size: %1</template>
    </textarea>

